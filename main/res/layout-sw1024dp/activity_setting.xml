<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="background color"/>
    <Spinner
        android:id="@+id/bgColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/settingsBackgroundColor"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="font color"/>
    <Spinner
        android:id="@+id/fontColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/settingsFontColor" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="font style"/>
    <Spinner
        android:id="@+id/fontStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/settingsFontStyle"/>
    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="back and save"
        android:layout_gravity="center"/>
</LinearLayout>